{
    "name": "ppi/component-installer",
    "description": "Handling installations of PPI modules",
    "type": "composer-installer",
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Dragoonis",
            "homepage": "http://www.ppi.io"
        }
    ],
    "autoload": {
        "psr-0": {
            "PPIInstaller": "src/"
        }
